<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="250" 
        MinWidth="500" MaxWidth="500" 
        MinHeight="250" MaxHeight="250"
        x:Class="CinephoriaDesktop.Views.Error.EmptyCredentialsErrorWindow"
        Title="Identifiants vides" 
        Background="#1C1C1C">
    
    <StackPanel Orientation="Vertical" Spacing="50" HorizontalAlignment="Center" VerticalAlignment="Center">
        
        <TextBlock FontSize="24" LineSpacing="5" Foreground="White">
            Vos identifiants sont vides, <LineBreak/>veuillez les saisir.
        </TextBlock>
        
        <Button Theme="{StaticResource ActionButton}" Width="200" Click="CloseWindow">OK</Button>
        
    </StackPanel>
</Window>