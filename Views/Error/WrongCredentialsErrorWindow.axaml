<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="250" 
        Width="500" Height="250" CanResize="False"
        x:Class="CinephoriaDesktop.Views.Error.WrongCredentialsErrorWindow"
        Title="Identifiants incorrects" 
        Background="#1C1C1C">
    
    <StackPanel Orientation="Vertical" Spacing="50" HorizontalAlignment="Center" VerticalAlignment="Center">
        
        <TextBlock FontSize="24" Foreground="White">Les identifiants saisis sont incorrects.</TextBlock>
        
        <Button Theme="{StaticResource ActionButton}" Width="200" Click="CloseWindow">OK</Button>
        
    </StackPanel>
</Window>
